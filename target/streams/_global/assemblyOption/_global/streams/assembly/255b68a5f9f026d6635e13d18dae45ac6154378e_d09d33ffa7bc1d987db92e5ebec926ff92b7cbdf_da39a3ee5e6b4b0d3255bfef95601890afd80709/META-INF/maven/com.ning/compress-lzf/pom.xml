    <modelVersion>4.0.0</modelVersion>
    <!-- 13-Mar-2017, tatu: use FasterXML oss-parent over sonatype's, more
        likely to get settings that work for releases
      -->
    <parent>
      <groupId>com.fasterxml</groupId>
      <artifactId>oss-parent</artifactId>
      <version>41</version>
